{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: debug full stack",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
        "args": ["dev"],
        "skipFiles": ["<node_internals>/**"],
        "serverReadyAction": {
          "action": "debugWithEdge",
          "pattern": "- Local:.+(https?://.+)",
          "uriFormat": "%s"
        },
        "outFiles": ["${workspaceFolder}/.next/**/*.js"],
        "console": "integratedTerminal"
      }
    ]
  }